<% if user_signed_in? %>
  <% if current_user.already_liked?(post) %>
    <%= link_to post_likes_path(post), method: :delete, remote: true do %>
      <i class="material-icons favorite-icon">favorite</i>
    <% end %>
  <% else %>
    <%= link_to post_likes_path(post), method: :post, remote: true do %>
      <i class="material-icons favorite-icon">favorite_border</i>
    <% end %>
  <% end %>
  <%= post.likes.count %>
<% end %>
