<p class="text-center"><%= t('.sign_up') %></p>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="form-group">
    <div class="radio">
      <label>
        <%= f.label :male, "男" %>
        <%= f.radio_button :gender, :male %>
      </label>
      <label>
        <%= f.label :female, "女" %>
        <%= f.radio_button :gender, :female %>
      </label>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :name, class:"bmd-label-floating" %>
    <%= f.text_field :name, autofocus: true,
                      autocomplete: 'name',
                      class: 'form-control',
                      required: true,
                      maxlength: '50' %>
  </div>
  <div class="form-group">
    <%= f.label :email, class:"bmd-label-floating" %>
    <%= f.email_field :email, autofocus: true,
                      autocomplete: 'email',
                      class: 'form-control',
                      required: true,
                      maxlength: '255' %>
  </div>
  <div class="form-group">
    <%= f.label :password, class:"bmd-label-floating" %>
    <%= f.password_field :password,
                         autocomplete: 'current-password',
                         class: 'form-control',
                         required: true %>
    <% if @minimum_password_length %>
      <small class="form-text text-muted"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
    <% end %>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation, class:"bmd-label-floating" %>
    <%= f.password_field :password_confirmation,
                         autocomplete: 'current-password',
                         class: 'form-control',
                         required: true %>
  </div>
  <div class="form-group">
    <%= f.submit t('.sign_up'), class: 'btn btn-primary btn-raised btn-block' %>
  </div>
<% end %>
<%= render 'devise/shared/links' %>
