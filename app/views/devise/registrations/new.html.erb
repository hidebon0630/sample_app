<div class="sm-page">
  <h1><%= t('.sign_up') %></h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= bootstrap_devise_error_messages! %>

    <div class="form-group">
      <%= f.label :sex, class:"bmd-label-floating" %>
      <%= f.select :sex, User.sexes.keys.map {|k| [I18n.t("enums.user.sex.#{k}"), k]}, {}, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :birth_date, class:"bmd-label-floating" %>
      <%= f.date_select :birth_date, {use_month_numbers: true,
                        start_year: 1920,
                        end_year: (Time.now.year - 20),
                        default: Date.new(1920, 1, 1)}, { class: "form-control" } %>
    </div>

    <div class="form-group">
      <%= f.label :name, class:"bmd-label-floating" %>
      <%= f.text_field :name, autofocus: true,
                        autocomplete: 'name',
                        class: 'form-control',
                        required: true,
                        maxlength: '50' %>
    </div>

    <div class="form-group">
      <%= f.label :email, class:"bmd-label-floating" %>
      <%= f.email_field :email, autofocus: true,
                        autocomplete: 'email',
                        class: 'form-control',
                        required: true,
                        maxlength: '255' %>
    </div>

    <div class="form-group">
      <%= f.label :password, class:"bmd-label-floating" %>
      <%= f.password_field :password,
                           autocomplete: 'current-password',
                           class: 'form-control',
                           required: true %>

      <% if @minimum_password_length %>
        <small class="form-text text-muted"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, class:"bmd-label-floating" %>
      <%= f.password_field :password_confirmation,
                           autocomplete: 'current-password',
                           class: 'form-control',
                           required: true %>
    </div>

    <div class="form-group">
      <%= f.submit t('.sign_up'), class: 'btn btn-primary btn-raised btn-block' %>
    </div>
  <% end %>

  <%= render 'devise/shared/links' %>
</div>
