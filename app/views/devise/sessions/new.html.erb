<div class="container-fluid">
  <div class="new-page">
    <p class="text-center mt-5"><%= t('.sign_in') %></p>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :email, class:"bmd-label-floating" %>
        <%= f.email_field :email,
                          autofocus: true,
                          autocomplete: 'email',
                          class: 'form-control',
                          required: true,
                          maxlength: '255' %>
      </div>
      <div class="form-group">
        <%= f.label :password, class:"bmd-label-floating" %>
        <%= f.password_field :password, autocomplete: 'current-password',
                             class: 'form-control',
                             required: true %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="form-group">
        <div class="switch">
          <%= f.label :remember_me, class: 'form-check-label' do %>
            <%= f.check_box :remember_me, class: 'form-check-input' %>
            <%= resource.class.human_attribute_name('remember_me') %>
          <% end %>
        </div>
        </div>
      <% end %>
      <div class="form-group">
        <%= f.submit t('.sign_in'), class: 'btn btn-primary btn-raised btn-block' %>
      </div>
    <% end %>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |g| %>
      <div class="form-group">
        <%= g.hidden_field :name, value: 'ゲストユーザー' %>
        <%= g.hidden_field :email, value: 'guest@example.com' %>
        <%= g.hidden_field :password, value: 'password' %>
        <%= g.submit 'かんたんログイン', class: 'btn btn-info btn-raised btn-block' %>
      </div>
    <% end %>
    <%= render 'devise/shared/links' %>
  </div>
</div>
