<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
    <div class="container">
      <%= link_to root_path, class: "navbar-brand" do %>
        <i class="fas fa-home">ホーム</i>
      <% end %>
      <% if user_signed_in? %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
              aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav mr-auto">　
            <li class="nav-item">
              <%= link_to users_path, class: "nav-link" do %>
                <i class="fas fa-users">ユーザーを探す</i>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to posts_path, class: "nav-link" do %>
                <i class="fas fa-question">投稿を探す</i>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to ranking_path, class: "nav-link" do %>
                <i class="fas fa-crown">ランキング</i>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to pv_path, class: "nav-link" do %>
                <i class="fas fa-apple">PV</i>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to notifications_path, class: "nav-link" do %>
                <% if unchecked_notifications.any? %>
                  <span class="fa-stack">
                    <i class="fas fa-bell fa-lg fa-stack-2x"></i>
                    <i class="fas fa-circle n-circle fa-stack-1x"></i>
                  </span>
                <% else %>
                  <i class="fas fa-bell">通知</i>
                <% end %>
              <% end %>
            </li>
          </ul>
          <ul class="navbar-nav">
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="material-icons">more_vert</i>
              </a>
              <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <%= link_to user_path(current_user), class: "dropdown-item" do %>
                  <i class="fas fa-address-card">マイページ</i>
                <% end %>
                <%= link_to edit_user_registration_path, class: "dropdown-item" do %>
                  <i class="fas fa-user-cog">プロフィール編集</i>
                <% end %>
                <div class="dropdown-divider"></div>
                <%= link_to destroy_user_session_path, class: "dropdown-item", method: :delete do %>
                  <i class="fas fa-sign-out-alt">ログアウト</i>
                <% end %>
              </div>
            </li>
          </ul>
        </div>
      <% else %>
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to new_user_session_path, class: "nav-link" do %>
              <i class="fas fa-sign-in-alt">ログイン</i>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to new_user_registration_path, class: "nav-link" do %>
              <i class="fas fa-user-plus">新規登録</i>
            <% end %>
          </li>
        </ul>
      <% end %>
    </div>
  </nav>
</header>
