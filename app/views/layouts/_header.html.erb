<header class="bmd-layout-header fixed-top">
  <div class="navbar navbar-light bg-primary">
    <button class="navbar-toggler" type="button" data-toggle="drawer" data-target="#dw-s2">
      <span class="sr-only">Toggle drawer</span>
      <i class="material-icons">menu</i>
    </button>
    <div class="navbar-brand">
      <%= link_to "Wanna Know？", root_path, class:"logo" %>
    </div>
  </div>
</header>
<div id="dw-s2" class="bmd-layout-drawer bg-faded">
  <ul class="list-group">
    <% if user_signed_in? %>
      <li>
        <%= link_to posts_path, class: "list-group-item" do %>
          <i class="material-icons">home</i>
          <span>ホーム</span>
        <% end %>
      </li>
      <li>
        <%= link_to users_path, class: "list-group-item" do %>
          <i class="material-icons">face</i>
          <span>ユーザーを探す</span>
        <% end %>
      </li>
      <li>
        <%= link_to posts_path, class: "list-group-item" do %>
          <i class="material-icons">live_help</i>
            <span>アンケートを探す</span>
        <% end %>
      </li>
      <li>
        <%= link_to favorite_path, class: "list-group-item" do %>
          <i class="material-icons">favorite</i>
            <span>いいねランキング</span>
        <% end %>
      </li>
      <li>
        <%= link_to pv_path, class: "list-group-item" do %>
          <i class="material-icons">remove_red_eye</i>
          <span>PVランキング</span>
        <% end %>
      </li>
      <li>
        <%= link_to notifications_path, class: "list-group-item" do %>
          <% if unchecked_notifications.any? %>
            <i class="material-icons">notifications_active</i>
            <span>通知</span>
          <% else %>
            <i class="material-icons">notifications</i>
            <span>通知</span>
          <% end %>
        <% end %>
      </li>
      <li>
        <%= link_to user_path(current_user), class: "list-group-item" do %>
          <i class="material-icons">account_circle</i>
            <span>マイページ</span>
        <% end %>
      </li>
        <%= link_to edit_user_registration_path, class: "list-group-item" do %>
          <i class="material-icons">supervisor_account</i>
            <span>設定</span>
        <% end %>
      <li>
        <%= link_to destroy_user_session_path, class: "list-group-item", method: :delete do %>
          <i class="material-icons">exit_to_app</i>
            <span>ログアウト</span>
        <% end %>
      </li>
    <% else %>
      <li>
        <%= link_to root_path, class: "list-group-item" do %>
          <i class="material-icons">home</i>
          <span>ホーム</span>
        <% end %>
      </li>
      <li>
        <%= link_to new_user_session_path, class: "list-group-item" do %>
          <i class="material-icons">lock_open</i>
          <span>ログイン</span>
        <% end %>
      </li>
      <li>
        <%= link_to new_user_registration_path, class: "list-group-item" do %>
          <i class="material-icons">verified_user</i>
          <span>新規登録</span>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
