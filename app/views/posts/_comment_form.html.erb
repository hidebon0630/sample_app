<%= form_for [@post, @comment] do |f| %>
  <%= f.label :content %>
  <%= f.text_field :content, placeholder: "30文字以内で入力してください",
                             class: 'form-control',
                             required: true %>
  <%= f.hidden_field :post_id, value: @post.id %>
  <%= f.submit 'コメントする', class: "btn btn-secondary btn-raised" %>
<% end %>
