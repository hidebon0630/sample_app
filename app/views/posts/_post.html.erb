<li id="post-<%= post.id %>">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title"><%= post.title %></h5>
      <p class="card-text"><%= post.content %></p>
      <p>
        <% if current_user == post.user %>
          <%= link_to post, method: :delete, data: { confirm: "本当に削除しますか？" } do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </p>
        <div data-role="tagsinput">
          <%= render 'posts/tag_list', tag_list: post.tag_list %>
        </div>
      <p>
        <%= post.likes.count %>
      </p>
      <% if current_user != post.user %>
        <p>
          <% if current_user.already_liked?(post) %>
            <%= button_to post_likes_path(post), method: :delete, class:"btn btn-success bmd-btn-fab" do %>
              <i class="material-icons">grade</i>
            <% end %>
          <% else %>
            <%= button_to post_likes_path(post), method: :post, class:"btn btn-secondary bmd-btn-fab" do %>
              <i class="material-icons">grade</i>
            <% end %>
          <% end %>
        </p>
      <% end %>
      <a href="/posts/<%= post.id %>" class="btn btn-primary btn-raised">回答する</a>
    </div>
  </div>
</li>
