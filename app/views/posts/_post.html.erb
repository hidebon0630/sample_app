<li id="post-<%= post.id %>">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">
        <% if post.user.avatar? %>
          <%= link_to image_tag(post.user.avatar.thumb.url, :size => '120x120', class: "user_icon"), post.user %>
        <% else %>
          <%= link_to image_tag("/assets/default.png", :size => '120x120', class: "user_icon"), post.user %>
        <% end %>
        <%= post.user.name %>
      </h5>
      <p class="card-text">
        <%= post.title %>
        視聴者数：<%= post.impressionist_count(:filter=>:session_hash) %></p>
      <p>
        <% if current_user == post.user %>
          <%= link_to post, method: :delete, data: { confirm: "本当に削除しますか？" } do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </p>
        <div data-role="tagsinput">
          <%= render 'posts/tag_list', tag_list: post.tag_list %>
        </div>
      <% if current_user != post.user %>
        <div id="likes_buttons_<%= post.id %>">
          <%= render partial: 'likes/like', locals: { post: post} %>
        </div>
      <% end %>
      <a href="/posts/<%= post.id %>" class="btn btn-primary btn-raised">回答する</a>
    </div>
  </div>
</li>
