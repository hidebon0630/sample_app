<li id="post-<%= post.id %> relative">
  <div class="card mb-5">
    <div class="card-body">
      <h5 class="card-title">
        <% if post.user.avatar? %>
          <%= link_to image_tag(post.user.avatar.thumb.url, :size => '50x50', class: "rounded-circle absolute"), post.user %>
        <% else %>
          <%= link_to image_tag("nouser.png", :size => '50x50', class: "rounded-circle absolute"), post.user %>
        <% end %>
      </h5>
      <h5 class="card-subtitle text-center mt-3"><%= post.title %></h5>
      <p class="card-text text-center">
        <i class="material-icons">remove_red_eye</i>
        <%= post.impressionist_count(:filter=>:session_hash) %>
        <% if current_user == post.user %>
          <%= link_to post, method: :delete, data: { confirm: "本当に削除しますか？" } do %>
            <i class="material-icons">delete_forever</i>
          <% end %>
        <% end %>
        <% if current_user != post.user %>
          <div id="likes_buttons_<%= post.id %>">
            <%= render partial: 'likes/like', locals: { post: post} %>
          </div>
        <% end %>
        <% if current_user == post.user || current_user.already_voted?(post) %>
          <%= link_to post_votes_path(post), class:"btn btn-primary btn-raised btn-block" do %>
            結果を見る<i class="material-icons">equalizer</i>
          <% end %>
        <% else %>
          <%= link_to post_path(post), class:"btn btn-secondary btn-raised btn-block" do %>
            回答する<i class="material-icons">check</i>
          <% end %>
        <% end %>
      </p>
    </div>
  </div>
</li>
