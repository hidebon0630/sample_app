<li id="post-<%= post.id %>">
  <p>投稿ユーザー：<%= link_to post.user.name, user_path(post.user) %></p>
  <p>タイトル：<%= post.title %></p>
  <p>内容：<%= post.content %></p>
  <p><%= link_to image_tag(post.image.url), post %></p>
  <span class="timestamp">
  投稿時間：<%= time_ago_in_words(post.created_at) %>前
    <% if current_user == post.user %>
      <%= link_to "delete", post, method: :delete,
                                       data: { confirm: "本当に削除しますか？" } %>
    <% end %>
  </span>
</li>
