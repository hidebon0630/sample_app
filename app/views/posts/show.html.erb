<% provide(:title, '投稿詳細') %>
<% breadcrumb :post_show %>
<div class="md-page">
  <%= breadcrumbs pretext: "現在地:", separator: " &rsaquo; " %>
  <%= render "posts/post", post: @post %>
  <p>コメント一覧</p>
  <% @comments.each do |comment| %>
    <div id="comment-<%= comment.id %>">
      <%= render "comment", comment: comment %>
    </div>
  <% end %>
  <%= render "comment_form" %>
</div>
