<% @votes.each do |vote| %>
  <%= vote.user.name %>
  <%= vote.user.sex_i18n %>
<% end %>

<div>
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">質問：<%= @post.title %></h5>
        <% @options.each_with_index do |option, i| %>
          <li>
            <%= i + 1 %>：
            <%= option.title %>
            <%= option.votes %>
          </li>
        <% end %>
    </div>
  </div>
</div>
<% if @chart.any? %>
  <%= pie_chart @chart, donut: true %>
<% else %>
  <div class="card">
    <div class="card-body">
      まだ回答がありません。
    </div>
  </div>
<% end %>
<div>
  <h4>コメント一覧</h4>
  <% @comments.each do |comment| %>
    <div id="comment-<%= comment.id %>">
      <%= render "posts/comment", comment: comment %>
    </div>
  <% end %>
  <%= render "posts/comment_form" %>
</div>
