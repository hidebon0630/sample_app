<div class="md-page">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title"><%= @post.title %></h5>
    <aside>
      <% if @post.image? %>
        <%= image_tag @post.image.url, :size => '120x120' %>
      <% end %>
    </aside>
      <% @options.each_with_index do |option, i| %>
        <li>
          <%= i + 1 %>：
          <%= option.title %>
          <%= option.vote_count %>
        </li>
      <% end %>
      <% @votes.each do |vote| %>
        <li>
          <%= vote.user.name %>
        </li>
      <% end %>
      回答者数<%= @votes.count %>
      <%= pie_chart @chart, donut: true, messages: {empty: "まだ回答がありません。"} %>
    </div>
  </div>
  <h4>コメント一覧</h4>
  <% @comments.each do |comment| %>
    <div id="comment-<%= comment.id %>">
      <%= render "posts/comment", comment: comment %>
    </div>
  <% end %>
  <%= render "posts/comment_form" %>
</div>
</div>
