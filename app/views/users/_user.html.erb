<li id="user-<%= user.id %>">
  <div class="card">
    <div class="card-body">
      <h5 class="card-text">
        <% if user.avatar? %>
          <%= image_tag user.avatar.thumb.url %>
        <% else %>
          <%= image_tag "/assets/default.png", :size => '100x100' %>
        <% end %>
        <span><%= link_to user.name, user %></span>
      </h5>
    </div>
  </div>
</li>
