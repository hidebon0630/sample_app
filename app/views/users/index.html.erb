<% provide(:title, 'ユーザーを探す') %>
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/posts">Home</a></li>
    <li class="breadcrumb-item active" aria-current="page">Users</li>
  </ol>
</nav>
<%= render 'user_search_form', url: users_path, q: @q %>
<ul class="user-list jscroll">
  <% if @users.any? %>
    <div class="row">
      <%= render @users %>
      <%= paginate @users %>
    </div>
  <% else %>
    <p class="text-center"><%= '検索結果がありません' %></p>
  <% end %>
</ul>
<%= render "posts/post_btn" %>
