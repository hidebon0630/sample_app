<div class="md-page">
  <li><%= @user.name %></li>
  <%= render 'shared/stats' %>
  <%= render 'follow_form' if user_signed_in? %>
  <ul class="post-list jscroll">
  <% if @user.posts.any? %>
    <h3>posts (<%= @posts.count %>)</h3>
    <ul class="posts">
      <%= render @posts %>
    </ul>
    <%= paginate @posts %>
  <% end %>
  </ul>
</div>
