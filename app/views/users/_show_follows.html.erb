<div class="col-md-6 mb-3">
  <div class="card align-items-center pt-3">
    <% if user.avatar.present? %>
      <%= link_to image_tag(user.avatar.thumb.url, :size => '150x150', class: "rounded-circle"), user %>
    <% else %>
      <%= link_to image_tag("nouser.png", :size => '150x150', class: "rounded-circle"), user %>
    <% end %>
    <p class="text-center"><%= user.name %></p>
  </div>
</div>
