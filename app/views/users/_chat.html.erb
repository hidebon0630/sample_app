<% unless user.id == current_user.id %>
  <% if (current_user.following?(user)) && (user.following?(current_user))  %>
    <% if @is_room == true %>
      <p class="user-show-room"><a href="/rooms/<%= @room_id %>" class="btn btn-secondary btn-raised btn-block">チャットへ</a>
    <% else %>
      <%= form_for @room do |f| %>
        <%= fields_for @entry do |e| %>
          <%= e.hidden_field :user_id, value: user.id %>
        <% end %>
        <%= f.submit "チャットを始める", class:"btn btn-secondary btn-raised btn-block user-show-chat"%>
      <% end %>
    <% end %>
  <% end %>
<% end %>
